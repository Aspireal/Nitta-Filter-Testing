<odoo>
    <data>
        <record id="seq_hospital_patient" model="ir.sequence">
            <field name="name">Lead Sequence</field>
            <field name="code">crm.lead</field>
            <field name="prefix">NITTA/LEAD/</field>
            <field name="padding">4</field>
            <field name="company_id" eval="False"/>
        </record>
        <record id="seq_hospital_patient1" model="ir.sequence">
            <field name="name">Opportunity Sequence</field>
            <field name="code">crm.lead.opportunity</field>
            <field name="prefix">NITTA/OPP/</field>
            <field name="padding">4</field>
            <field name="company_id" eval="False"/>
        </record>
    </data>

    <record id="crm_lead_form_inherited" model="ir.ui.view">
        <field name="name">crm.lead.form</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_lead_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@class='oe_title']" position="before">
                <h1>
                    <label for="reference_no" attrs="{'invisible':[('type','=', 'opportunity')]}"/>
                    <br/>
                    <field name="reference_no" readonly="1" attrs="{'invisible':[('type','=', 'opportunity')]}"/>
                    <label for="reference_no1" attrs="{'invisible':[('type','!=', 'opportunity')]}"/>
                    <br/>
                    <field name="reference_no1" readonly="1" attrs="{'invisible':[('type','!=', 'opportunity')]}"/>
                </h1>
            </xpath>
             <xpath expr="//group[@name='opportunity_partner']/field['partner_id']" position="after">
                 <field name="lead_ref" readonly="1" attrs="{'invisible':['|', ('type','=', 'lead'),('type','!=', 'opportunity')]}"
                        widget="badge" decoration-success="lead_ref"/>
             </xpath>
        </field>
    </record>
</odoo>