<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="purchase_order_form_inherited1" model="ir.ui.view">
        <field name="name">purchase.order.form</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_rfq_send']" position="after">
                <button name="button_draft_po" type="object" states="sent,draft" string="Draft PO" class="oe_highlight"
                        data-hotkey="v"/>
            </xpath>

            <xpath expr="//button[@name='button_confirm']" position="attributes">
                <attribute name="attrs">{'invisible': [('state', '!=', 'draft_po')]}</attribute>
            </xpath>
            <xpath expr="//field[@name='state']" position="replace">
                <field name="state" widget="statusbar" statusbar_visible="draft,sent,draft_po,purchase" readonly="1"/>
            </xpath>
            <xpath expr="//button[@name='button_cancel']" position="replace">
                <button name="button_cancel" states="draft,to approve,sent,purchase,draft_po" string="Cancel" type="object"
                        data-hotkey="x"/>
            </xpath>

            <!--            <xpath expr="//button[@name='button_cancel']" position="attributes">-->
            <!--                <attribute name="invisible">0</attribute>-->

            <!--            </xpath>-->
        </field>
    </record>


</odoo>